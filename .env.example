# Database Configuration
DATABASE_URL="mysql://user:password@localhost:3306/dreamscape"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# AI Provider Configuration
# Choose between "gemini" or "openai" (defaults to "gemini" if not set)
AI_PROVIDER="gemini"

# ===== GEMINI CONFIGURATION (when AI_PROVIDER=gemini) =====
# Get your free API key from https://ai.google.dev/
GEMINI_API_KEY="your_gemini_api_key_here"
GEN_MODEL="gemini-1.5-flash"

# Optional: Gemini media generation models (expensive, disabled by default)
# IMAGE_MODEL="imagen-3.0-generate-001"
# VIDEO_MODEL="veo-latest"
# MUSIC_MODEL="music-generation-model"

# ===== OPENAI CONFIGURATION (when AI_PROVIDER=openai) =====
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"

# OpenAI models (optional, defaults shown)
OPENAI_MODEL="gpt-4o-mini"  # For text generation
OPENAI_IMAGE_MODEL="dall-e-3"  # For image generation (optional)
